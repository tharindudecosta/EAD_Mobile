<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/account_profile_tv"
            android:text="@string/account_profile_label"
            android:textAppearance="@style/TextAppearance.MyTheme.Body1"
            app:drawableStartCompat="@drawable/account_person_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CommonTextViewStyle" />

        <TextView
            android:id="@+id/account_orders_tv"
            android:text="@string/account_orders_label"
            android:textAppearance="@style/TextAppearance.MyTheme.Body1"
            app:drawableStartCompat="@drawable/account_orders_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_profile_tv"
            style="@style/CommonTextViewStyle" />

        <TextView
            android:id="@+id/account_address_tv"
            android:text="@string/account_address_label"
            android:textAppearance="@style/TextAppearance.MyTheme.Body1"
            app:drawableStartCompat="@drawable/account_address_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_orders_tv"
            style="@style/CommonTextViewStyle" />

        <TextView
            android:id="@+id/account_reviews_tv"
            android:text="@string/account_reviews_label"
            android:textAppearance="@style/TextAppearance.MyTheme.Body1"
            app:drawableStartCompat="@drawable/baseline_star_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_address_tv"
            style="@style/CommonTextViewStyle" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/account_reviews_tv" />

        <TextView
            android:id="@+id/account_sign_out_tv"
            android:text="@string/account_sign_out_label"
            android:textAppearance="@style/TextAppearance.MyTheme.Body1"
            app:drawableStartCompat="@drawable/account_signout_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            style="@style/CommonTextViewStyle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
